{
    "title": "vocal-ui-thing",
    "description": "a smart presence detector thing",
    "support": "git://github.com/eclipse/thingweb.node-wot.git",
    "@context": [
        "https://www.w3.org/2019/wot/td/v1"
    ],
    "properties": {},
    "actions": {
        "triggerVocalCommand": {
            "description": "For test purpose: trigger a new vocal command",
            "uriVariables": {
                "command": {
                    "type": "string"
                }
            },
            "output": {
                "type": "object",
                "description": "Returns true/false and a message when all invoked promises are resolved (asynchronous).",
                "properties": {
                    "result": {
                        "type": "boolean"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "events": {
        "vocalCommand": {
            "description": "The sensor detect a new command",
            "data": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "command": {
                        "type": "string"
                    }
                }
            }
        }
    }
}